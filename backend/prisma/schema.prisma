generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(uuid())
  title     String
  done      Boolean  @default(false)
  deadline  DateTime?
  email     String?  // optional: for public/shared vs. user-specific
  createdAt DateTime @default(now())
}

